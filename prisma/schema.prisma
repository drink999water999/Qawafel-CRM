// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String?  @unique
  email     String   @unique
  password  String?
  name      String?
  image     String?
  provider  String   @default("credentials") // "credentials" or "google"
  role      String   @default("user")
  approved  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model SignupRequest {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  image     String?
  provider  String   @default("google")
  status    String   @default("pending") // "pending", "approved", "rejected"
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("signup_requests")
}

model Customer {
  id                Int       @id @default(autoincrement())
  name              String
  email             String    @unique
  phone             String?
  accountStatus     String    @map("account_status")
  marketplaceStatus String    @map("marketplace_status")
  joinDate          DateTime  @map("join_date") @db.Date
  company           String

  activities Activity[]
  notes      Note[]

  @@index([accountStatus])
  @@index([marketplaceStatus])
  @@index([joinDate])
  @@map("customers")
}

model Merchant {
  id                      Int       @id @default(autoincrement())
  name                    String
  email                   String    @unique
  phone                   String?
  accountStatus           String    @map("account_status")
  joinDate                DateTime  @map("join_date") @db.Date
  businessName            String    @map("business_name")
  category                String
  
  // New subscription fields
  plan                    String?
  signUpDate              DateTime? @map("sign_up_date") @db.Date
  trialFlag               Boolean   @default(false) @map("trial_flag")
  saasStartDate           DateTime? @map("saas_start_date") @db.Date
  saasEndDate             DateTime? @map("saas_end_date") @db.Date
  
  // CR (Commercial Registration) fields
  crId                    String?   @map("cr_id")
  crCertificate           String?   @map("cr_certificate") // File path or URL
  
  // VAT fields
  vatId                   String?   @map("vat_id")
  vatCertificate          String?   @map("vat_certificate") // File path or URL
  
  // ZATCA (Zakat, Tax and Customs Authority) fields
  zatcaIdentificationType String?   @map("zatca_identification_type")
  zatcaId                 String?   @map("zatca_id")
  verificationStatus      String?   @map("verification_status")
  
  // Payment and retention
  lastPaymentDueDate      DateTime? @map("last_payment_due_date") @db.Date
  retentionStatus         String?   @map("retention_status")

  activities Activity[]
  notes      Note[]

  @@index([accountStatus])
  @@index([plan])
  @@index([retentionStatus])
  @@index([verificationStatus])
  @@index([saasEndDate])
  @@map("merchants")
}

model Lead {
  id               Int      @id @default(autoincrement())
  company          String
  contactName      String   @map("contact_name")
  email            String
  phone            String
  status           String
  source           String
  value            Decimal  @db.Decimal(10, 2)
  businessSize     String?  @map("business_size")
  numberOfBranches Int?     @map("number_of_branches")
  formToken        String?  @unique @map("form_token")

  notes Note[]

  @@index([email])
  @@index([status])
  @@map("leads")
}

model Deal {
  id          Int      @id @default(autoincrement())
  title       String
  company     String
  contactName String   @map("contact_name")
  value       Decimal  @db.Decimal(10, 2)
  stage       String
  probability Int
  closeDate   DateTime @map("close_date") @db.Date

  @@index([stage])
  @@index([closeDate])
  @@map("deals")
}

model Proposal {
  id            Int       @id @default(autoincrement())
  title         String
  clientName    String    @map("client_name")
  clientCompany String    @map("client_company")
  value         Decimal   @db.Decimal(10, 2)
  currency      String
  status        String
  validUntil    DateTime  @map("valid_until") @db.Date
  sentDate      DateTime? @map("sent_date") @db.Date
  createdAt     DateTime  @map("created_at") @db.Date

  @@map("proposals")
}

model Activity {
  id        Int     @id @default(autoincrement())
  text      String
  timestamp BigInt
  icon      String
  userId    Int?    @map("user_id")
  userType  String? @map("user_type")

  customer Customer? @relation(fields: [userId], references: [id], map: "fk_activity_customer")
  merchant Merchant? @relation(fields: [userId], references: [id], map: "fk_activity_merchant")

  @@map("activities")
}

model UserProfile {
  id       Int    @id @default(autoincrement())
  fullName String @map("full_name")
  email    String
  phone    String

  @@map("user_profile")
}

model Note {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  userId    String   @map("user_id")
  userName  String   @map("user_name")
  
  // Polymorphic relations - one of these will be set
  leadId     Int?     @map("lead_id")
  customerId Int?     @map("customer_id")
  merchantId Int?     @map("merchant_id")
  
  lead     Lead?     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  customer Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  merchant Merchant? @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([customerId])
  @@index([merchantId])
  @@index([createdAt])
  @@index([userId])
  @@map("notes")
}
