// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String?  @unique
  email     String   @unique
  password  String?
  name      String?
  image     String?
  provider  String   @default("credentials") // "credentials" or "google"
  role      String   @default("user")
  approved  Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model SignupRequest {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  image     String?
  provider  String   @default("google")
  status    String   @default("pending") // "pending", "approved", "rejected"
  createdAt DateTime @default(now()) @map("created_at")
  
  @@map("signup_requests")
}

model Customer {
  id                Int       @id @default(autoincrement())
  name              String
  email             String    @unique
  phone             BigInt?
  accountStatus     String    @map("account_status")
  marketplaceStatus String    @map("marketplace_status")
  joinDate          DateTime  @map("join_date") @db.Date
  company           String

  activities Activity[]
  notes      Note[]

  @@index([accountStatus])
  @@index([marketplaceStatus])
  @@index([joinDate])
  @@index([phone])
  @@map("customers")
}

model Merchant {
  id                      Int       @id @default(autoincrement())
  name                    String
  email                   String    @unique
  phone                   BigInt?
  accountStatus           Boolean   @default(true) @map("account_status")
  joinDate                DateTime  @map("join_date") @db.Date
  businessName            String    @map("business_name")
  category                String
  
  // New subscription fields
  plan                    String?
  signUpDate              DateTime? @map("sign_up_date") @db.Date
  trialFlag               Boolean   @default(false) @map("trial_flag")
  saasStartDate           DateTime? @map("saas_start_date") @db.Date
  saasEndDate             DateTime? @map("saas_end_date") @db.Date
  
  // CR (Commercial Registration) fields
  crId                    String?   @map("cr_id")
  crCertificate           String?   @map("cr_certificate") // File path or URL
  
  // VAT fields
  vatId                   String?   @map("vat_id")
  vatCertificate          String?   @map("vat_certificate") // File path or URL
  
  // ZATCA (Zakat, Tax and Customs Authority) fields
  zatcaIdentificationType String?   @map("zatca_identification_type")
  zatcaId                 String?   @map("zatca_id")
  verificationStatus      String?   @map("verification_status")
  
  // Payment and retention
  lastPaymentDueDate      DateTime? @map("last_payment_due_date") @db.Date
  retentionStatus         String?   @map("retention_status")

  activities Activity[]
  notes      Note[]

  @@index([plan])
  @@index([retentionStatus])
  @@index([verificationStatus])
  @@index([saasEndDate])
  @@index([phone])
  @@map("merchants")
}

// PHASE 1: Normalized Company table
model Company {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  
  contacts Contact[]
  deals    Deal[]
  
  @@index([name])
  @@map("companies")
}

// PHASE 1: Normalized Contact table
model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  phone     BigInt?
  companyId Int      @map("company_id")
  createdAt DateTime @default(now()) @map("created_at")
  
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  deals   Deal[]
  
  @@index([companyId])
  @@index([email])
  @@index([phone])
  @@index([name])
  @@map("contacts")
}

// PHASE 1: Deal stages lookup table
model DealStage {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  color       String  @default("#3B82F6") // Default blue
  order       Int     @unique
  isWon       Boolean @default(false)
  isLost      Boolean @default(false)
  isActive    Boolean @default(true)
  
  deals Deal[]
  
  @@index([order])
  @@index([isActive])
  @@map("deal_stages")
}

// PHASE 1: Lead statuses lookup table
model LeadStatus {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  color       String  @default("#10B981") // Default green
  order       Int     @unique
  isActive    Boolean @default(true)
  
  leads Lead[]
  
  @@index([order])
  @@index([isActive])
  @@map("lead_statuses")
}

// PHASE 1: Lead sources lookup table
model LeadSource {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
  isActive    Boolean @default(true)
  
  leads Lead[]
  
  @@index([isActive])
  @@map("lead_sources")
}

model Lead {
  id               Int        @id @default(autoincrement())
  company          String
  contactName      String     @map("contact_name")
  email            String
  phone            BigInt
  statusId         Int        @map("status_id")
  sourceId         Int        @map("source_id")
  value            Decimal    @db.Decimal(10, 2)
  businessSize     String?    @map("business_size")
  numberOfBranches Int?       @map("number_of_branches")
  formToken        String?    @unique @map("form_token")
  createdAt        DateTime   @default(now()) @map("created_at")

  status LeadStatus @relation(fields: [statusId], references: [id], onDelete: Restrict)
  source LeadSource @relation(fields: [sourceId], references: [id], onDelete: Restrict)
  notes  Note[]

  @@index([email])
  @@index([statusId])
  @@index([sourceId])
  @@index([phone])
  @@index([company])
  @@index([createdAt])
  @@map("leads")
}

// PHASE 1: Normalized Deal table
model Deal {
  id          Int       @id @default(autoincrement())
  title       String
  companyId   Int       @map("company_id")
  contactId   Int       @map("contact_id")
  stageId     Int       @map("stage_id")
  value       Decimal   @db.Decimal(10, 2)
  probability Int
  closeDate   DateTime  @map("close_date") @db.Date
  createdAt   DateTime  @default(now()) @map("created_at")
  
  company Company   @relation(fields: [companyId], references: [id], onDelete: Restrict)
  contact Contact   @relation(fields: [contactId], references: [id], onDelete: Restrict)
  stage   DealStage @relation(fields: [stageId], references: [id], onDelete: Restrict)

  @@index([companyId])
  @@index([contactId])
  @@index([stageId])
  @@index([closeDate])
  @@index([createdAt])
  @@map("deals")
}

model Proposal {
  id            Int       @id @default(autoincrement())
  title         String
  clientName    String    @map("client_name")
  clientCompany String    @map("client_company")
  value         Decimal   @db.Decimal(10, 2)
  currency      String
  status        String
  validUntil    DateTime  @map("valid_until") @db.Date
  sentDate      DateTime? @map("sent_date") @db.Date
  createdAt     DateTime  @map("created_at") @db.Date

  @@map("proposals")
}

model Activity {
  id        Int     @id @default(autoincrement())
  text      String
  timestamp BigInt
  icon      String
  userId    Int?    @map("user_id")
  userType  String? @map("user_type")

  customer Customer? @relation(fields: [userId], references: [id], map: "fk_activity_customer")
  merchant Merchant? @relation(fields: [userId], references: [id], map: "fk_activity_merchant")

  @@map("activities")
}

model UserProfile {
  id       Int    @id @default(autoincrement())
  fullName String @map("full_name")
  email    String
  phone    BigInt

  @@map("user_profile")
}

// Notes table with polymorphic relations and entityType
model Note {
  id         Int      @id @default(autoincrement())
  content    String   @db.Text
  createdAt  DateTime @default(now()) @map("created_at")
  userId     String   @map("user_id")
  userName   String   @map("user_name")
  entityType String   @map("entity_type") // "lead", "customer", "merchant"
  
  // Polymorphic relations - one of these will be set
  leadId     Int?     @map("lead_id")
  customerId Int?     @map("customer_id")
  merchantId Int?     @map("merchant_id")
  
  lead     Lead?     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  customer Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  merchant Merchant? @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([customerId])
  @@index([merchantId])
  @@index([createdAt])
  @@index([userId])
  @@index([entityType])
  @@map("notes")
}
